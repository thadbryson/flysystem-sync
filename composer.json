{
    "name":              "thadbryson/flysystem-sync",
    "description":       "Flysystem wrapper to sync directories.",
    "license":           "MIT",
    "version":           "dev-main",
    "authors":           [
        {
            "name":  "Thad Bryson",
            "email": "thadbry@gmail.com"
        }
    ],
    "require":           {
        "php":              "^8.2",
        "league/flysystem": "^3.0"
    },
    "require-dev":       {
        "roave/security-advisories":  "dev-latest",

        "codeception/codeception":    "^5.1",
        "codeception/module-asserts": "^3.0"
    },
    "autoload":          {
        "psr-4": {
            "TCB\\FlysystemSync\\": "src/"
        },
        "files": [
            "src-functions/Helper.php"
        ]
    },
    "autoload-dev":      {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable":     true
}
