{
    "name":              "thadbryson/flysystem-sync",
    "description":       "Flysystem wrapper to sync directories.",
    "license":           "MIT",
    "authors":           [
        {
            "name":     "Thad Bryson",
            "email":    "thadbry@gmail.com",
            "homepage": "http://thadbryson.co"
        }
    ],
    "require":           {
        "php":              "^7.2 || ^8.0",
        "league/flysystem": "^3.0"
    },
    "require-dev":       {
        "phpunit/phpunit":           "^8.5 || ^9.4",
        "roave/security-advisories": "dev-latest"
    },
    "autoload":          {
        "psr-4": {
            "TCB\\FlysystemSync\\": "src/"
        }
    },
    "autoload-dev":      {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable":     true,
    "version":           "dev-main"
}
